<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context=".MainActivity"
    tools:deviceIds="wear"
    android:padding="16dp"
    android:background="@drawable/mountain">
    <!--
    <TextView android:id="@+id/text" app:layout_box="all" android:layout_width="match_parent"
        android:layout_height="match_parent" android:text="@string/hello_world" android:gravity="center"/>

    <TextView android:id="@+id/clock" app:layout_box="all" android:layout_gravity="bottom|start"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textColor="@android:color/white" android:layout_centerInParent="true" />
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        app:layout_box="all">

        <TextView
            android:id="@+id/quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="#111111"
            android:textStyle="bold"
            android:background="#ffffff"
            android:layout_gravity="center_vertical"
            android:textIsSelectable="false" />

        <Button
            android:id="@+id/button4"
            android:layout_width="58dp"
            android:layout_height="34dp"
            android:background="@drawable/buttons"
            android:text="More Quotes"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="onClickMore"
            android:textSize="8dp"
            android:visibility="gone" />

        <Button android:id="@+id/button"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:background="@drawable/buttons"
            android:text="General"
            android:layout_gravity="center_vertical"
            android:onClick="onClickGeneral"
            android:textSize="8dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:text="Educational"
            android:background="@drawable/buttons"
            android:layout_gravity="center"
            android:visibility="visible"
            android:onClick="onClickEducational"
            android:textSize="8dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:background="@drawable/buttons"
            android:text="Sports"
            android:layout_gravity="right|center_vertical"
            android:onClick="onClickSports"
            android:textSize="8dp" />

    </LinearLayout>


</android.support.wearable.view.BoxInsetLayout>
